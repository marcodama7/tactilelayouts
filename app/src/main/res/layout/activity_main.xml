<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <FrameLayout
        android:background="#cecece"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

        <com.github.marcodama7.tactilelayouts.views.MovableLayout
            android:id="@+id/frame0"
            android:scaleType="fitCenter"
            android:background="#aaaaaa"
            android:layout_alignParentBottom="true"
            android:layout_width="100dp"
            android:layout_height="100dp" >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Movable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.github.marcodama7.tactilelayouts.views.MovableLayout>


        <com.github.marcodama7.tactilelayouts.views.SwappableLayout
            android:id="@+id/frame1"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:background="#aaaaaa"
            android:layout_height="100dp" >
           <TextView
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:text="Swappable"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
        </com.github.marcodama7.tactilelayouts.views.SwappableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.marcodama7.tactilelayouts.views.PinchableLayout
            android:id="@+id/frame2"
            android:background="#ff0000"
            android:layout_width="200dp"
            android:layout_height="100dp" >

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/test"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Pinchable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.github.marcodama7.tactilelayouts.views.PinchableLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/log"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
